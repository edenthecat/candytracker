<%= simple_form_for @candy, html: { class: "form-group"} do |f| %>
  <%= f.input :name, input_html: { placeholder: "Cotton Candy", class: 'form-control' } %>
  <%= f.input :category, as: :select, input_html: { class: 'form-control' }, collection: Candy::CATEGORIES, include_blank: "Select a category" %>
  <%= f.input :address, input_html: { class: 'form-control' }  %>
  <%= f.input :rating, as: :select, collection: 1..5, input_html: { class: 'form-control' } %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
